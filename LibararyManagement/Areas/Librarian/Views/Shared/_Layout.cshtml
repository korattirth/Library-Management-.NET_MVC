<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>@ViewBag.Title - My ASP.NET Application</title>
</head>
<body>
    <div class="container-fluid mb-2 p-0">
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item active">
                    @Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item active">
                    @Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item active dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" style="cursor:pointer">Books</a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Availble Book", "allAvailbleBook", "librarian", new { area = "librarian" }, new { @class = "dropdown-item" })</li>
                        <li>@Html.ActionLink("All Book", "Index", "librarian", new { area = "librarian" }, new { @class = "dropdown-item" })</li>
                        <li>@Html.ActionLink("Issue Book", "allIsuueBook", "librarian", new { area = "librarian" }, new { @class = "dropdown-item" })</li>
                        <li>@Html.ActionLink("History Issue Book", "historyOfIssueBook", "librarian", new { area = "librarian" }, new { @class = "dropdown-item" })</li>
                    </ul>
                </li>
                <li class="nav-item active">
                    @Html.ActionLink("User Management", "blockUser", "librarian", new { area = "librarian" }, new { @class = "nav-link" })
                </li>
                @if (Session["UserID"] != null)
                {
                    @Html.ActionLink("Logout", "Logout", "Home", new { area = "" }, new { @class = "nav-link" })
                }
                else
                {
                    @Html.ActionLink("SignUp", "Signup", "Home", new { area = "" }, new { @class = "nav-link" })
                    @Html.ActionLink("LogIn", "LogIn", "Home", new { area = "" }, new { @class = "nav-link" })
                }
            </ul>
        </nav>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>
